{
  "name": "reelview",
  "version": "1.0.0",
  "description": "ReelView - Stream your favorite movies, TV shows, and anime",
  "author": {
    "name": "ReelView Team",
    "email": "info@reelview.local"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reelview/reelview.git"
  },
  "license": "MIT",
  "main": "build/src/index.js",
  "scripts": {
    "build": "tsc --noEmit false --skipLibCheck true --esModuleInterop true && electron-rebuild",
    "prepare-spa": "node ./scripts/prepare-spa.js",
    "electron:start-live": "node ./live-runner.js",
    "electron:start": "npm run prepare-spa && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir -c ./electron-builder.config.json",
    "electron:make": "npm run build && electron-builder build -c ./electron-builder.config.json"
  },
  "dependencies": {
    "@capacitor-community/electron": "^5.0.0",
    "chokidar": "~3.5.3",
    "electron-is-dev": "~2.0.0",
    "electron-serve": "~1.1.0",
    "electron-unhandled": "~4.0.1",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "ffmpeg-static": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "~23.6.0",
    "electron-rebuild": "^3.2.9",
    "tailwind-scrollbar": "^4.0.2",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "capacitor",
    "electron",
    "streaming",
    "movies",
    "tv",
    "anime"
  ]
}
